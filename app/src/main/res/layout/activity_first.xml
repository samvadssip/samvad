<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">

    <LinearLayout
        android:id="@+id/Det_btn"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_65sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/learn_btn"
        app:layout_constraintBottom_toTopOf="@id/Len_btn"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/Len_btn"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_65sdp"
        app:layout_constraintTop_toBottomOf="@id/Det_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/detect_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>